{
	"name": "@little-bonsai/ingrates-acquire-enhancer",
	"version": "0.1.1",
	"description": "Either spawn or get and existing ingrates actor address",
	"main": "dist/index.js",
	"scripts": {
		"test": "exit 0",
		"build": "microbundle --jsx React.createElement",
		"watch": "microbundle watch --jsx React.createElement",
		"format": "prettier --write src/**/*",
		"lint": "eslint . && prettier --check src/**/*",
		"prepushOnly": "npm run format && npm run test && npm run build",
		"prepublishOnly": "npm run format && npm run test && npm run build"
	},
	"author": "Freddie Gilbraith <freddie.gilbraith@littlebonsai.co.uk",
	"license": "ISC",
	"sideEffects": false,
	"source": "src/index.js",
	"module": "dist/index.module.js",
	"unpkg": "dist/index.umd.js",
	"exports": "./dist/index.modern.js",
	"files": [
		"/src",
		"/dist",
		"/README.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/FreddieGilbraith/ingrates-acquire-enhancer.git"
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"eslintConfig": {
		"extends": "@little-bonsai"
	},
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"**/*.md"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run lint"
		}
	},
	"lint-staged": {
		"**/*.js": "eslint --fix",
		"**/*.{md,js,json}": "prettier --write"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@little-bonsai/eslint-config": "^0.1.0",
		"babel-eslint": "^10.1.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-minify": "^0.5.1",
		"eslint": "^7.28.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"microbundle": "^0.13.2",
		"prettier": "^2.3.1"
	}
}
